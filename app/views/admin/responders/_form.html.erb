<%= form_for [:admin, @election, @responder], html:{class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'control-label col-sm-2' %>
    <div class="col-sm-4">
      <%= f.email_field :email, required: true, class: "form-control" %>
    </div>
  </div>
  <hr>
  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-2">
      <%= f.submit "Save", class: "btn btn-primary", data:{disable_with: "Saving..."} %>
      <%= link_to "cancel", :back, class: "btn btn-link" %>
    </div>
  </div>

<% end %>
