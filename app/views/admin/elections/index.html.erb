<div class="page-header">
  <ul class="list-inline pull-right">
    <li>
      <%= link_to fontawesome('plus-circle', "New Election"), new_admin_election_path, class: "btn btn-primary" %>
    </li>
  </ul>
  <h1>Elections</h1>
</div>


<% @elections.in_groups_of(3, false) do |group| %>
  <div class="row">
    <% group.each do |election| %>
      <div class="col-sm-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class='panel-title'><%= link_to election.title, admin_election_path(election) %></h4>
          </div>
          <div class="panel-body">
            <p><em><%= election.description %></em></p>
          </div>
          <div class="panel-footer text-right">
            <%= link_to fontawesome('pencil',"edit"), edit_admin_election_path(election), class: "btn btn-xs btn-default" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


